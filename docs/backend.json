{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user in the application, can be a customer or a provider.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "Firebase Auth UID." },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "role": { "type": "string", "enum": ["customer", "provider", "admin"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "Service": {
      "title": "Service",
      "description": "A service offered by a provider.",
      "type": "object",
      "properties": {
        "providerId": { "type": "string", "description": "UID of the user providing the service." },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "price": { "type": "number" },
        "priceUnit": { "type": "string", "enum": ["hourly", "fixed"] },
        "isActive": { "type": "boolean", "description": "Indicates if the service is currently listed." },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["providerId", "title", "price", "isActive", "createdAt", "updatedAt"]
    },
    "Booking": {
      "title": "Booking",
      "description": "A booking of a service by a customer.",
      "type": "object",
      "properties": {
        "customerId": { "type": "string", "description": "UID of the customer." },
        "providerId": { "type": "string", "description": "UID of the provider." },
        "serviceId": { "type": "string" },
        "bookingDate": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pending", "confirmed", "completed", "cancelled"] },
        "paymentStatus": { "type": "string", "enum": ["unpaid", "paid", "refunded"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["customerId", "providerId", "serviceId", "bookingDate", "status", "paymentStatus", "createdAt"]
    },
    "AdminRole": {
      "title": "Admin Role",
      "type": "object",
      "description": "The existence of a document with a user's UID in the roles_admin collection designates them as an administrator.",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "description": "Confirms admin status. Should always be true."
        }
      },
      "required": ["isAdmin"]
    },
    "ProviderProfile": {
      "title": "Provider Profile",
      "type": "object",
      "description": "Public-facing profile for a service provider, separate from their user auth data.",
      "properties": {
        "userId": { "type": "string", "description": "Reference to the User UID." },
        "displayName": { "type": "string" },
        "description": { "type": "string" },
        "categories": { "type": "array", "items": { "type": "string" } },
        "location": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "rating": { "type": "number" },
        "status": { "type": "string", "enum": ["draft", "active", "suspended", "verified"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "displayName", "status", "createdAt"]
    },
    "ProviderAvailability": {
      "title": "Provider Availability",
      "type": "object",
      "description": "Defines a provider's weekly schedule and any exceptions.",
      "properties": {
        "weeklySchedule": {
          "type": "object",
          "description": "Default recurring weekly availability.",
          "properties": {
            "monday": { "$ref": "#/backend/entities/TimeSlot" },
            "tuesday": { "$ref": "#/backend/entities/TimeSlot" },
            "wednesday": { "$ref": "#/backend/entities/TimeSlot" },
            "thursday": { "$ref": "#/backend/entities/TimeSlot" },
            "friday": { "$ref": "#/backend/entities/TimeSlot" },
            "saturday": { "$ref": "#/backend/entities/TimeSlot" },
            "sunday": { "$ref": "#/backend/entities/TimeSlot" }
          }
        },
        "dateOverrides": {
          "type": "array",
          "description": "Specific date-based overrides for time off or special hours.",
          "items": {
            "type": "object",
            "properties": {
              "date": { "type": "string", "format": "date" },
              "slots": { "type": "array", "items": { "$ref": "#/backend/entities/TimeSlot" } }
            }
          }
        }
      }
    },
    "TimeSlot": {
      "title": "Time Slot",
      "type": "object",
      "description": "A simple time slot with start and end times.",
      "properties": {
        "start": { "type": "string", "description": "Start time, e.g., '09:00'" },
        "end": { "type": "string", "description": "End time, e.g., '17:00'" },
        "enabled": { "type": "boolean" }
      },
      "required": ["start", "end", "enabled"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores public-facing user profiles."
        }
      },
      {
        "path": "/users/{userId}/services/{serviceId}",
        "definition": {
          "entityName": "Service",
          "schema": { "$ref": "#/backend/entities/Service" },
          "description": "Services offered by a specific provider."
        }
      },
       {
        "path": "/bookings/{bookingId}",
        "definition": {
          "entityName": "Booking",
          "schema": { "$ref": "#/backend/entities/Booking" },
          "description": "Stores all bookings across the platform."
        }
      },
      {
        "path": "/providers/{providerId}",
        "definition": {
          "entityName": "ProviderProfile",
          "schema": { "$ref": "#/backend/entities/ProviderProfile" },
          "description": "Public profiles for service providers."
        }
      },
      {
        "path": "/providers/{providerId}/availability/schedule",
        "definition": {
            "entityName": "ProviderAvailability",
            "schema": { "$ref": "#/backend/entities/ProviderAvailability" },
            "description": "Singleton document storing a provider's availability."
        }
      },
      {
        "path": "/roles_admin/{userId}",
        "definition": {
          "entityName": "AdminRole",
          "schema": { "$ref": "#/backend/entities/AdminRole" },
          "description": "Private collection to designate admin users. Managed by backend."
        }
      }
    ]
  }
}
