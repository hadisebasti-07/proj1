rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      // An owner can create their own doc, or an admin can create any.
      allow create: if isOwner(userId) || isAdmin();
      // Admin can update any user. A user can update their own profile.
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    match /providers/{providerId} {
      allow read: if isSignedIn();
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /roles_admin/{userId} {
      // Allow a user to read their own admin role document.
      // Disallow list, create, update, delete for all.
      allow get: if isOwner(userId);
      allow list, write: if false;
    }
  }
}
