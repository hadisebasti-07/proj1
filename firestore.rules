rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isUserAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allows a user to grant themselves admin role, but not change it back.
    function canBecomeAdmin(userId) {
      return isOwner(userId) 
        && resource.data.role != 'admin' 
        && request.resource.data.role == 'admin';
    }

    function canUpdateUser(userId) {
      let isUidUnchanged = request.resource.data.uid == resource.data.uid;
      // An owner can update their profile, but cannot change their own role (unless becoming admin)
      let isOwnerUpdatingSafely = isOwner(userId) && (request.resource.data.role == resource.data.role || canBecomeAdmin(userId));
      return isUidUnchanged && (isOwnerUpdatingSafely || isUserAdmin());
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isUserAdmin();
      allow create: if isOwner(userId) && request.resource.data.role != 'admin';
      allow update: if canUpdateUser(userId);
      allow delete: if isOwner(userId) || isUserAdmin();
    }
  }
}
