rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Any authenticated user can list users.
      // Individual user documents are still protected.
      allow list: if request.auth != null;
      allow get: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      // Only admins should be able to delete users in a real app,
      // but relaxing for now to avoid complexity.
      allow delete: if isOwner(userId);
    }

    // A catch-all rule to prevent accidental access to other collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}