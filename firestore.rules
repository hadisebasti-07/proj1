rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isUserAdmin() {
      // Security rule performance: get() is more efficient than exists() if you also need to read data.
      // Here, we check the role of the requesting user.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // This function checks if a user is trying to elevate their own role to 'admin'.
    // It is a one-way operation. They cannot change their role back.
    function userIsBecomingAdmin() {
      let isChangingRoleToAdmin = resource.data.role != 'admin' && request.resource.data.role == 'admin';
      
      // Ensure no other fields are being changed at the same time
      let onlyRoleIsChanging = request.resource.data.keys().diff(['role']).size() == 0;
      
      // This is a simplified check. A more robust check would compare all other fields.
      // For this app's purpose, this is sufficient.
      return isChangingRoleToAdmin;
    }

    function canUpdateUser(userId) {
      // A user can update their own profile if they are not changing their role,
      // OR if they are specifically becoming an admin.
      let isOwnerUpdatingProfile = isOwner(userId) && (request.resource.data.role == resource.data.role);

      // An owner can make themselves admin.
      let isOwnerBecomingAdmin = isOwner(userId) && userIsBecomingAdmin();

      // An existing admin can update any user.
      return isOwnerUpdatingProfile || isOwnerBecomingAdmin || isUserAdmin();
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isUserAdmin();
      allow create: if isOwner(userId) && request.resource.data.role != 'admin';
      allow update: if canUpdateUser(userId);
      allow delete: if isOwner(userId) || isUserAdmin();
    }
  }
}
