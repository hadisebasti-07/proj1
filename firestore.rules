rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // This function now checks the 'role' field on the user's own profile document.
    function isUserAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      // Allow listing if the requesting user is an admin.
      allow list: if isUserAdmin();
      // A user can create their own profile, but cannot set their role to admin upon creation.
      allow create: if isOwner(userId) && request.resource.data.role != 'admin';
      // An admin can update any user. A user can update their own profile.
      allow update: if isOwner(userId) || isUserAdmin();
      allow delete: if isOwner(userId) || isUserAdmin();
    }
  }
}
